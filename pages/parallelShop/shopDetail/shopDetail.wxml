<!-- <import src="../../template/graphicList.wxml" /> -->
<view class="containView">
  <!-- 店铺信息 -->
  <view class="weui-panel__bd">
    <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="weui-media-box__thumb" src="{{shopData.img}}" />
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">{{shopData.name}}</view>
        <!-- <view class="weui-media-box__desc">主营：{{busin}}</view>  -->
        <view class="weui-media-box__desc">{{shopData.address}}</view>
      </view>
    </view>
  </view>
  <!-- 领配产品 -->
  <view class="weuiTitle weui-panel__hd">领配产品</view>
  <view class="goods" wx:if="{{status==0||item.status==status}}">
    <view class="menu-wrapper">
      <scroll-view scroll-y="true" style="height: 450px;">
        <view wx:for="{{goods}}" class="menu-item border-1px" bindtap="selectMenu" data-item-index="{{index}}" wx:key="key">
          <view class="text">
            {{item.name}}
          </view>
        </view>
      </scroll-view>
    </view>
    <scroll-view scroll-y="true" scroll-into-view="{{toView}}" class="foods-wrapper">
      <view wx:for="{{goods}}" class="food-list food-list-hook" wx:for-index="parentIndex" wx:key="key">
        <view id="order{{parentIndex}}" class="title">{{item.name}}</view>
        <view wx:for="{{item.foods}}" class="food-item" wx:for-item="food" data-food="{{food}}" wx:key="key">
          <view class="icon">
            <image src="{{food.image}}" style="width: 57px;height: 57px" data-id="{{food.image}}" bindtap="togglePopup"></image>
          </view>
          <view class="content">
            <view class="name">{{food.name}}</view>
            <view class="price">
              <view class="now">￥{{food.price}}</view>
              <view class="now">配领值 {{food.match}}</view>
            </view>

            <!--cartControl-->
            <view class="cartControl-wrapper">
              <view class="cartControl">
                <view name="fade">
                  <view class="cart-decrease" wx:if="{{food.Count > 0}}" data-item-index="{{index}}" data-parentIndex="{{parentIndex}}" catchtap="decreaseCart">
                    <view class="inner iconfont icon-jian" style="font-size:24px;color:#ad0e11;"></view>
                  </view>
                  <view class="cart-count" wx:if="{{food.Count > 0 }}">{{food.Count}}</view>
                  <view class=" iconfont icon-jia cart-add " style="color:#ad0e11; " data-item-index="{{index}}" data-parentIndex="{{parentIndex}}" catchtap="addCart"></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>

    <!--shopCart-->
    <view>
      <view>
        <view class="shopCart">
          <view class="content" bindtap="toggleList">
            <view class="content-left">
              <view class="logo-wrapper">
                <view class="logo highlight">
                  <view class="iconfont icon-gouwuche highlight"></view>
                </view>
                <view class="num" wx:if="{{totalCount> 0}}">{{totalCount}}</view>
              </view>
              <view class="price highlight">总价：￥{{totalPrice}}</view>
              <view class="match">总配领值：{{totalMatch}}</view>
            </view>
            <view class="content-right" catchtap="pay">
              <view class="pay enough" :class="payClass">
                {{payDesc}}
              </view>
            </view>
          </view>
          <view class="shopcart-list" style="display:{{cartShow}}">
            <view class="list-header">
              <view class="title">购物车</view>
              <text class="empty" bindtap="empty">清空</text>
            </view>

            <view class="list-content">
              <scroll-view scroll-y style="height: 200px;">

                <view class="shopcart-food" wx:for="{{carArray}}" wx:key="key">
                  <text class="name">{{item.name}}</text>
                  <view class="price" wx:if="{{item.num > 0}}">
                    <span>￥{{item.price*item.num}}</span>
                    <span>　</span>
                    <span>配领值：{{item.match*item.num}}</span>
                  </view>

                  <!--cartControl-->
                  <view class="cartControl-wrapper" style="bottom:10px;" wx:if="{{item.num > 0}}">
                    <view class="cartControl" style="width:80px;">
                      <view name="fade">
                        <view class="cart-decrease" style="display:inline-block;" data-item-index="{{item.index}}" data-parentIndex="{{item.parentIndex}}" catchtap="decreaseShopCart">
                          <view class="inner iconfont icon-jian" style="font-size:24px;color:#ad0e11;"></view>
                        </view>
                        <view class="cart-count" style="display:inline-block;width:32px;text-align:center;font-size:14px;">{{item.num}}</view>
                        <view class=" iconfont icon-jia cart-add " style="font-size:24px;color:#ad0e11; padding:0;" data-item-index="{{item.index}}" data-parentIndex="{{item.parentIndex}}" catchtap="addShopCart"></view>
                      </view>
                    </view>
                  </view>
                  <!--cartControl-->
                </view>
              </scroll-view>

            </view>


          </view>
        </view>
      </view>
    </view>
    <view name="fade">
      <view class="list-mask" wx:if="{{listShow}}" bindtap="hideList"></view>
    </view>
  </view>

  <view class="zan-popup {{ showPopup ? 'zan-popup--show' : ''}}">
    <view class="zan-popup__mask" bindtap="togglePopup"></view>
    <view class="zan-popup__container popup-example--center">
      <view class="zan-btns">
        <image src='{{url}}'></image>
      </view>
    </view>
  </view>
</view>