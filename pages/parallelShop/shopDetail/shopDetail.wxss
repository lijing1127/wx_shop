/* 选择框 */
.gw_num {
    border: 1px solid #dbdbdb;
    width: 220rpx;
    line-height: 52rpx;
    overflow: hidden;
    margin: 0 auto;
    text-align: center;
  }

  .cut,.add {
    display: block;
    height: 52rpx;
    width: 52rpx;
    float: left;
    color: #7A7979;
    text-align: center;
    cursor: pointer;
  }
  .cut1{
    border-right: 1px solid #dbdbdb;
  }
  .add1{
    border-left: 1px solid #dbdbdb;  
  }

  .gw_num .num {
    display: block;
    float: left;
    text-align: center;
    width: 112rpx;
    font-style: normal;
    font-size: 24rpx;
    line-height: 52rpx;
    border: 0;
  }

  .gw_num em.add {
    float: right;
    border-right: 0;
    border-left: 1px solid #dbdbdb;
  }

  .parallelColler{
    padding:0 20rpx;
    color: #fff;
    font-size: 32rpx;
    /* background: #ad0e11 */
  }

  .clickable{
    background: #ad0e11;
  }
  .disable{
    background: #999;
  }
  .hidden{
    display: none;
  }
  .show{
    display: block;
  }

  .weui-cell__bd{
    font-size: 36rpx;
  }

  .containView{
    padding-bottom: 100rpx;
  }
  .proDetail{
    background: #fff; 
    box-shadow: 5px 5px 5px #ddd;
    border-top: 3px solid #ad0e11;
    border-radius: 10rpx;
    padding: 60rpx 2% 30rpx;
    width: 60%;
    position: fixed;
    left: 18%;
    bottom: 50%;
    font-size: 28rpx;
  }

  .proDetail button{
    border: 0;
    margin-top: 20rpx;
    color: #ad0e11;
    font-size: 32rpx;
  }
  .weui-cell{
    padding: 5rpx 20rpx;
  }
  .weui-cell__bd{
    color: #333;
  }
  .bottomPosition{
    border-top: 1px solid #d9d9d9;
    width: 100%;
    line-height: 2.55555556;
    background: #fff;
    position: fixed;
    left: 0;
    bottom: 0
  }