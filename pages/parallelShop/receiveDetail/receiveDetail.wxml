<!--pages/parallelShop/receiveDetail/receiveDetail.wxml 领配详情 -->
<view>
  <view class='receiveDetailBlock'>
    <image src='../../../images/capital-1.jpg' />
  </view>
  <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">已选产品列表</view>
      <view class="weui-panel__bd">
          <navigator url="#" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{ productList }}" wx:key="{{ index }}">
              <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                  <image class="weui-media-box__thumb" src="{{ item.image }}" />
              </view>
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                  <view class="weui-media-box__title">{{ item.name }}</view>
                  <view class="weui-media-box__desc">￥ {{ item.price }} X {{ item.count }} </view>
              </view>
          </navigator>
      </view>
  </view>
  <view class='receiveDetailBlockBtn'>
    <text> 总计：{{ totalPrice }}元 </text>
  </view>
</view>
