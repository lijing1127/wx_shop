<view>
  <!-- 头部搜索框 -->
  <view class="headSearch">
    <input placeholder="搜索" />
    <navigator>
      <button plain="true" bindtap='parallelBtn'>管理版</button>
    </navigator>
  </view>
  <!-- 轮播图 -->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="http://ybhm.ybyt.cc/{{item.image.url}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>

  <!-- 图标按钮 -->
  <view class="weui-grids">
    <block wx:for="{{iconGroup}}" wx:key="{{index}}">
      <navigator class="weui-grid" hover-class="weui-grid_active" url="{{item.url}}">
        <image class="weui-grid__icon" src="{{item.img}}" />
        <view class="weui-grid__label">{{item.text}}</view>
      </navigator>
    </block>
  </view>

  <!-- 推荐平行店列表 -->
  <view>
    <view class="weuiTitle weui-panel__hd">推荐平行店</view>
    <view class="weui-panel__bd" wx:for="{{parallel}}" wx:for-item="item" wx:key="{{index}}">
      <navigator url="../shopDetail/shopDetail?id={{item.id}}" data-index="{{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src="http://ybhm.ybyt.cc/{{item.image.url}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">{{item.title}}</view>
          <view class="weui-media-box__desc">主营：{{item.busin}}</view>
          <view class="weui-media-box__desc">{{item.address}}</view>
        </view>
      </navigator>
      <!-- <template is="shopList" data="{{item}}" />  -->
    </view>

  </view>

</view>