/* pages/parallelShop/shopEdition/shopEdition.wxss */
@import '../../../style/weui.wxss';
.headSearch {
  height:80rpx;
  width:100%;
  background-color: #ad0e11;
  display: flex;
  justify-content: space-around;
  padding:0 10rpx;
  align-items:center;
}

.headSearch input {
  width:80%;
  background: #f8f8f8;
  border-radius: 10rpx;
  --webkit-appearance: none;
  height:52rpx;
  padding: 0 10rpx;
}

.headSearch button {
  background: #ad0e11;
  border:0;
  height:80rpx;
  line-height: 80rpx;
  color: #fff; 
  font-size: 28rpx;
}

.slide-image {
  width:100%;
  height:400rpx;
}

.weui-grids {
  margin-top: 30rpx;
  display: flex;
}

.weui-grids, .weui-grid {
  border:0;
}

.weui-grid__label {
  margin-top:16rpx;
}

