
<form bindsubmit="formSubmit" class='registerBlockMargin'>
  <view class='register'>注　册</view>
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
              <input name="phone" type="number" class="weui-input" placeholder="请输入手机号码" auto-focus="true" bindblur="blur_mobile" maxlength="11" />
          </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
              <view class="weui-label">短信验证码</view>
          </view>
          <view class="weui-cell__bd">
              <input name="vCode" type="number" maxlength='4' class="weui-input" placeholder="请输入验证码" bindblur="blur_code" />
          </view>
          <view class="weui-cell__ft">
              <view class="weui-vcode-btn" bindtap='getVcode'>获取验证码</view>
          </view>
      </view>
  </view>

